@model IEnumerable<DataAccessLayer.Models.Pen>
@{
    //ViewData["Title"] = "Список ручек";
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <title>Магазин Ручек</title>
</head>
<body>
    <h3>Ручки</h3>
    <table border="1" bordercolor="black">
        <tr>
            <td>id</td>
            <td>Бренд</td>
            <td>Цвет</td>
            <td>Цена</td>
            <td></td>
        </tr>
        @foreach (var pen in Model)
        {
    <tr>
        <td>@pen.PenId</td>
        <td>@pen.Brand</td>
        <td>@pen.Color</td>
        <td>@pen.Price</td>
    </tr>
        }
    </table>
</body>
</html>


<form method="get" action="~/Home/AddToDataBase">
    <label>Бренд</label><br />
    <input type="text" name="brand" /><br />
    <label>Цвет</label><br />
    <input type="text" name="color" /><br />
    <label>Цена</label><br />
    <input type="number" min="5" max="1000" name="price" /><br />
    <br />
    <input type="submit" value="добавить в базу" />
</form>
<br />
<form method="get" action="~/Home/DeleteFromDataBase">
   <h3>id ручки</h3> <input type="number" min="@Model.First().PenId" max="@Model.Last().PenId" name="id" /><br />
    <br />
    <input type="submit" value="Удалить ручку из базы" />
</form>